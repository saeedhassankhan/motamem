<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/motamem_green_darker"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgLogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_book"

        android:layout_width="150dp"
        android:layout_height="180dp" />

    <TextView
        app:layout_constraintBottom_toTopOf="@id/textCreator"
        app:layout_constraintLeft_toLeftOf="@id/imgLogo"
        app:layout_constraintRight_toRightOf="@id/imgLogo"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:textSize="16dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="نسخه غیر رسمی\n\n 1.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/textCreator"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:textColor="@color/white"
        android:textSize="11dp"
        android:text="ساخته شده با ❤️ توسط سعید حسن خان"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>